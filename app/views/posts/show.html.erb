<p>
	<%= @post.title %>
</p>

<% if @post.view_count.present? %>
	<p>Ditel en <%= @post.view_count.ditum %> mard</p>
<p>
	<%= @post.content %>
</p>
<% end %>

<%= form_for [@post, @post.comments.build] do |f| %>
	<%= f.text_area :content %>
	<%= f.submit %>
<% end %>

<p>
	<b><%= @post.comments.count %></b>
</p>

<% @post.comments.each do |comment| %>
	<p>
		<%= comment.content %>
	</p>
<% end %>