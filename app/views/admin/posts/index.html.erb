<div class="container">
	<div class="row">
		<div class="col">
			<%= link_to 'New Post', new_admin_post_path, class: 'btn btn-success' %>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<table class="table table-bordered">
				<tr>
					<th>Title</th>
					<th>Content</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
				<% @posts.each do |post| %>
				<tr>
					<td><%= link_to post.title, admin_post_path(post) %></td>
					<td><%= post.content %></td>
					<td><%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-info' %></td>
					<td><%= button_to 'Delete', [:admin, post], method: :delete, class: 'btn btn-danger' %></td>
				</tr>
				
				<% end %>
			</table>
		</div>
	</div>
</div>